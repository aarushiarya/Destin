<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/section_label"
        android:textStyle="bold"
        android:paddingBottom="2dp"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="20dp"
        android:text="Address" />

    <TextView
        android:id="@+id/mAddress"
        android:paddingBottom="2dp"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/section_label"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/section_label"
        android:layout_alignTop="@+id/mPhone"
        android:text="Phone Number" />

    <TextView
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/section_label"
        android:layout_alignTop="@+id/mPrice"
        android:text="Price Level" />

    <TextView
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/section_label"
        android:layout_marginTop="119dp"
        android:text="Rating" />

    <TextView
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/section_label"
        android:layout_marginTop="164dp"
        android:text="Google Page" />

    <TextView
        android:id="@+id/textView6"
        android:textStyle="bold"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/section_label"
        android:layout_marginTop="206dp"
        android:text="Website" />

    <TextView
        android:id="@+id/mPhone"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/mAddress"
        android:layout_marginTop="57dp"
        android:autoLink="phone"
        android:onClick="clickCall" />

    <TextView
        android:id="@+id/mPrice"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/mAddress"
        android:layout_marginTop="83dp" />

    <TextView
        android:id="@+id/mGoogle"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mAddress"
        android:layout_alignTop="@+id/textView5" />

    <TextView
        android:id="@+id/mWebsite"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mAddress"
        android:layout_alignTop="@+id/textView6" />

    <RatingBar
        android:id="@+id/mRating"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/mAddress"
        android:layout_marginBottom="-164dp"
        android:isIndicator="true" />

</RelativeLayout>